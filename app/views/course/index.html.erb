<div class="container">
  <div class="row">
    <% @courses.each do |course| %>
      <div class="card blue-grey darken-1">
        <div class="card-content white-text">
          <span class="card-title"><%= course.name %></span>
          <p><%= course.description %></p>
        </div>
        <div class="card-action">
          <%= link_to '<i class="material-icons right">create</i>Take Quiz'.html_safe, question_path(course.id), class: "waves-effect waves-light btn" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
